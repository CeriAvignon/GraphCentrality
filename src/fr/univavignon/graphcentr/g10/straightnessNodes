

/**
 * @author Habib Mohamed
 * 
 */


public static double straightnessNodes(int k,int j,double distanceShortestPath)
{
	//Initialisation
	double resStraightness=0;
	double de=distanceEuclidienne(k,j);

	if(distanceShortestPath==Double.MAX_VALUEE)
	{
		resStraightness=0;
	}
	else
	{
		if(distanceShortestPath==de)
		{
			resStraightness=1;
		}
		else
		{
			resStraightness=de/distanceShortestPath;
		}
	}
return resStraightness;
}
public static double distanceEuclidienne(u,v)
{
	return Math.sqrt(Math.pow((u.x-v.x),2)+Math.pow((u.y-v.y),2));
}